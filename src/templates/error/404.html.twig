{% extends "base.html.twig" %}
{% block title %}404 \ MVC-plum{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/fg/css/error.css">
{% endblock %}

{% block body %}

<body>
    <div class="page">
        <div class="card">
            <div class="stripe"></div>
            <div class="card-header">
                <span class="card-title">HTTP Response</span>
                <span class="status-badge">404</span>
            </div>
            <div class="card-body">
                <div class="code">404</div>
                <div class="message">Page Not Found</div>
                <div class="path">{{ path }}</div>
                <hr class="divider">
                <div class="hint">
                    The route you requested doesn't exist.<br>
                    Head back to <a href="/">@home</a> or check your URL.
                </div>
            </div>
        </div>

        <div class="footer">
            <span>MVC-plum Â· 404</span>
            <span id="ts"></span>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        renderTimestamps(['#ts']);
    </script>
{% endblock %}
